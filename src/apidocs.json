{
  "openapi": "3.0.0",
  "info": {
    "title": "Quiz Backend API",
    "version": "1.0.0",
    "description": "API for quiz generation, cache, progress, history, tutorial utilities, and user preferences"
  },
  "servers": [
    {
      "url": "https://backend-dc-02.vercel.app/api",
      "description": "Production server"
    }
  ],
  "tags": [
    { "name": "Users", "description": "User preferences" },
    { "name": "Quiz", "description": "Quiz generation" },
    { "name": "Tutorial", "description": "Tutorial utilities" },
    { "name": "Progress", "description": "Quiz progress handling" },
    { "name": "Cache", "description": "Quiz cache handling" },
    { "name": "History", "description": "Quiz history management" }
  ],

  "paths": {
    "/users/{id}/preferences": {
      "get": {
        "tags": ["Users"],
        "summary": "Get user preferences",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": { "type": "string", "example": "user_1" }
          }
        ],
        "responses": {
          "200": {
            "description": "Preferences retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "preferences": { "type": "object" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/quiz/generate": {
      "post": {
        "tags": ["Quiz"],
        "summary": "Generate quiz from tutorial content",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["tutorialId", "level"],
                "properties": {
                  "tutorialId": { "type": "string", "example": "tutorial_1" },
                  "level": {
                    "type": "integer",
                    "enum": [1, 2, 3],
                    "example": 2
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Quiz generated",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/GenerateQuizResponse"
                }
              }
            }
          }
        }
      }
    },

    "/tutorial/heading": {
      "get": {
        "tags": ["Tutorial"],
        "summary": "Get tutorial heading",
        "parameters": [
          {
            "name": "tutorialId",
            "in": "query",
            "required": true,
            "schema": { "type": "string", "example": "tutorial_1" }
          }
        ],
        "responses": {
          "200": {
            "description": "Heading retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "heading": { "type": "string", "example": "Intro to JS" }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/quiz/progress": {
      "post": {
        "tags": ["Progress"],
        "summary": "Save quiz progress",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SaveProgressRequest" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/BasicSuccess" }
        }
      },
      "get": {
        "tags": ["Progress"],
        "summary": "Get quiz progress",
        "parameters": [
          { "$ref": "#/components/parameters/TutorialId" },
          { "$ref": "#/components/parameters/UserId" },
          { "$ref": "#/components/parameters/Level" }
        ],
        "responses": {
          "200": {
            "description": "Progress retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "progress": { "type": "object", "nullable": true }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/quiz/cache": {
      "get": {
        "tags": ["Cache"],
        "summary": "Get quiz cache",
        "parameters": [
          { "$ref": "#/components/parameters/TutorialId" },
          { "$ref": "#/components/parameters/UserId" },
          { "$ref": "#/components/parameters/Level" }
        ],
        "responses": {
          "200": {
            "description": "Quiz cache retrieved",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "quizCache": { "type": "array", "nullable": true }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["Cache"],
        "summary": "Save quiz cache",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SaveQuizCacheRequest" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/responses/BasicSuccess" }
        }
      }
    },

    "/quiz/clear": {
      "delete": {
        "tags": ["Cache"],
        "summary": "Clear quiz cache and/or progress",
        "parameters": [
          { "$ref": "#/components/parameters/TutorialId" },
          { "$ref": "#/components/parameters/UserId" },
          { "$ref": "#/components/parameters/Level" },
          {
            "name": "cache",
            "in": "query",
            "schema": { "type": "boolean", "default": true }
          },
          {
            "name": "progress",
            "in": "query",
            "schema": { "type": "boolean", "default": true }
          }
        ],
        "responses": {
          "200": {
            "description": "Cache cleared",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "success": { "type": "boolean", "example": true },
                    "deleted": {
                      "type": "array",
                      "items": { "type": "string" }
                    }
                  }
                }
              }
            }
          }
        }
      }
    },

    "/quiz/history": {
      "get": {
        "tags": ["History"],
        "summary": "Get quiz history",
        "responses": {
          "200": {
            "description": "History retrieved",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/GetHistoryResponse" }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["History"],
        "summary": "Save quiz history",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": { "$ref": "#/components/schemas/SaveHistoryRequest" }
            }
          }
        },
        "responses": {
          "200": { "$ref": "#/components/schemas/SaveHistoryResponse" }
        }
      }
    },

    "/quiz/history/clear": {
      "delete": {
        "tags": ["History"],
        "summary": "Clear quiz history",
        "responses": {
          "200": { "$ref": "#/components/responses/BasicSuccess" }
        }
      }
    }
  },

  "components": {
    "parameters": {
      "TutorialId": {
        "name": "tutorialId",
        "in": "query",
        "required": true,
        "schema": { "type": "string", "example": "tutorial_1" }
      },
      "UserId": {
        "name": "userId",
        "in": "query",
        "required": true,
        "schema": { "type": "string", "example": "user_1" }
      },
      "Level": {
        "name": "level",
        "in": "query",
        "required": true,
        "schema": { "type": "integer", "enum": [1, 2, 3], "example": 2 }
      }
    },

    "schemas": {
      "GenerateQuizResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" },
          "tutorial": { "type": "object" },
          "meta": { "type": "object" },
          "quiz": { "type": "array", "items": { "type": "object" } }
        }
      },

      "SaveProgressRequest": {
        "type": "object",
        "required": ["tutorialId", "userId", "level", "progress"],
        "properties": {
          "tutorialId": { "type": "string" },
          "userId": { "type": "string" },
          "level": { "type": "integer" },
          "progress": { "type": "object" }
        }
      },

      "SaveQuizCacheRequest": {
        "type": "object",
        "required": ["tutorialId", "userId", "level", "quiz"],
        "properties": {
          "tutorialId": { "type": "string" },
          "userId": { "type": "string" },
          "level": { "type": "integer" },
          "quiz": { "type": "array", "items": { "type": "object" } }
        }
      },

      "SaveHistoryRequest": {
        "type": "object",
        "properties": {
          "tutorialId": { "type": "string" },
          "userId": { "type": "string" },
          "level": { "type": "integer" },
          "score": { "type": "integer" },
          "totalQuestions": { "type": "integer" },
          "createdAt": { "type": "string", "format": "date-time" }
        }
      },

      "SaveHistoryResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "message": { "type": "string", "example": "History saved" },
          "entry": { "$ref": "#/components/schemas/SaveHistoryRequest" }
        }
      },

      "GetHistoryResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean", "example": true },
          "history": {
            "type": "array",
            "items": { "$ref": "#/components/schemas/SaveHistoryRequest" }
          }
        }
      }
    },

    "responses": {
      "BasicSuccess": {
        "description": "Success",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "success": { "type": "boolean", "example": true },
                "message": { "type": "string" }
              }
            }
          }
        }
      }
    }
  }
}
